<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <nav>
        <ul class="menu">
            <li>@Html.ActionLink("Главная", "Index", "Home")</li>
        </ul>
    </nav>
    @RenderBody()
    <!-- <footer>RenderSection("Footer")</footer>  footera dnum ete chka inch vor ejum tex beruma error   -->
    <!-- <footer>RenderSection("Footer", false)</footer>  stuguma ete ka futer nor dnuma -->

    <footer>
        @if (IsSectionDefined("Footer"))        // stuguma ete ka futer dnuma ete che else-i meji default-na dnum
        {
            @RenderSection("Footer")
        }
        else
        {
            <p>default footer</p>
            <span>Содержание элемента footer по умолчанию.</span>
        }
    </footer>
</body>

</html>